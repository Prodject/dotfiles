[user]
    email = farischugthai@gmail.com
    name = farisachugthai

[core]
    editor = nvim
    pager = less -rL
    autocrlf = input
	excludesfile = "$HOME/.config/git/ignore"

[color]
    ui = true
    pager = true
    interactive = auto
    diff = true
    branch = always

# Man git-difftool: Line 85
# If difftool settings havent been set, fall back to mergetool
[diff]
    # guitool = gvimdiff3
    color = auto
    prompt = false
    strategy-option = patience
    tool = nvim -d

[merge]
    # guitool = gvimdiff3
    color = auto
    mergestyle = diff3
    prompt = false
    strategy-option = resolve
    tool = nvim -d

[push]
    default = simple

[sequence]
    editor = nvim

[branch]
    autosetupmerge = true

[pager]
    status = true

[alias]
# From: https://git-scm.com/book/en/v2/Git-Basics-Git-Aliases
    last = log -1 HEAD
    unstage = reset HEAD

# From varying Gists
    staged = diff --cached
    unstaged = diff

# Fix unexpected behavior
    ls = ls-files

# From: https://githowto.com/history
# Run check git-log
    hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short

[help]
    autocorrect = 1

[credential]
	helper = cache
