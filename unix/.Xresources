! Xresources
! So the terminal isnt completely illegible but it doesnt look very good and
! URLs are impossible to read

! From the man himself Shotts.
URxvt.geometry                 : 120x36
URxvt.saveLines                : 10000
URxvt.scrollBar                : false
URxvt*scrollBar_right          : false
URxvt.secondaryScroll          : true
URxvt.cursorBlink              : false

! First attempt at configuring the X server directly
URxvt*transparent              : true
URxvt*shading                  : 50
URxvt*visualBell               : true
URxvt*fading                   : 30
URxvt*colorUL                  : blue

URxvt.letterSpace    : -2
Urxvt*font: FiraCode: autohint=True: pixelsize=22
URxvt*italicFont     : xft : Bitstream Vera Sans Mono : italic        : autohint=true : pixelsize=24
URxvt*boldItalicFont : xft : Bitstream Vera Sans Mono : bold          : italic        : autohint=true : pixelsize=24

!check out archwikis entry on fontconfig for good explanations of anti-aliasing and autohinting
*antialias                     : true
*autohint                      : true

URxvt*scrollWithBuffer         : false
URxvt*scrollTtyOutput          : false
URxvt*scrollTtyKeypress        : true

! as a heads up the URLs are impossible to read so fix that
URxvt.perl-ext-common          : default,matcher,tabbed
URxvt.urlLauncher              : xdg-open
URxvt*url-select.launcher      : /usr/bin/firefox
URxvt*url-select.underline     : true
URxvt.matcher.pattern.1        : \\bwww\\.[\\w-]\\.[\\w./?&@#-\[\]]*[\\w/-]

! https://github.com/addy-dclxvi/i3-starterpack/blob/master/.Xresources
URxvt*iso14755:			false
URxvt*termName:			rxvt-256color
URxvt.lineSpace:		0


! ------------------------------------------------------------------------------
! Xft Font Configuration
! --------------------------------------------------------------------------
Xft.antialias   : true
Xft.autohint    : true
Xft.lcdfilter   : lcddefault
Xft.hintstyle   : hintslight
Xft.hinting     : 1
Xft.rgba        : rgb


