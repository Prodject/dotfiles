! Xresources

! From the man himself Shotts.
URxvt.geometry                 : 120x36
URxvt.saveLines                : 10000
URxvt.scrollBar                : false
URxvt*scrollBar_right          : false
URxvt.secondaryScroll          : true
URxvt.cursorBlink              : false

! First attempt at configuring the X server directly
URxvt*transparent              : true
URxvt*shading                  : 50
URxvt*visualBell               : true
URxvt*fading                   : 30
URxvt*colorUL                  : blue

urxvt*font: xft:Terminus
! URxvt.font           : xft : Fira Code Light          : autohint=true : pixelsize=12
Urxvt*font: FiraCode: autohint=True: pixelsize=24
! URxvt.letterSpace    : -2

! URxvt*italicFont     : xft : Bitstream Vera Sans Mono : italic        : autohint=true : pixelsize=12
! URxvt*boldItalicFont : xft : Bitstream Vera Sans Mono : bold          : italic        : autohint=true : pixelsize=12
! I dont know why I thought that made sense. Should really set to something
! at least similar to urxvt and let tmux work out the rest
!
! let rxvt set itself
! URxvt*termName                 : tmux-256color


! *antialias                     : true
! *autohint                      : true

URxvt*scrollWithBuffer         : false
URxvt*scrollTtyOutput          : false
URxvt*scrollTtyKeypress        : true

! as a heads up the URLs are impossible to read so fix that
URxvt.perl-ext-common          : default,matcher,tabbed
URxvt.urlLauncher              : xdg-open
URxvt*url-select.launcher      : /usr/bin/firefox
URxvt*url-select.underline     : true
URxvt.matcher.pattern.1        : \\bwww\\.[\\w-]\\.[\\w./?&@#-\[\]]*[\\w/-]

